@model IEnumerable<Semop.Aplicacion.Modulos.Core.SubAlcaldias.Dtos.SubAlcaldiaDto>
@{
    ViewBag.Title = "Index";
}

<h3>Listado</h3>
<div class="row">
    <div class="col-xs-9 col-sm-3 spacer-component">
        <div class="input-group">
            <p>
                @Html.ActionLink("Crear Nuevo", "Crear")
            </p>
        </div>
        <div class="clearfix"></div>
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
            {
            <div class="input-group">
                @Html.TextBox("search", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Texto búsqueda..." })
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Buscar</button>
                </span>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-xs-12">
        <table id="tbl-subalcaldias" class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Zona</th>
                <th>Telefono</th>
                <th>Responsable</th>
                <th>Opciones</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zona)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreSubAlcalde)
                        </td>
                        <td>
                            <div id="box-opciones" class="btn-group">
                                <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="glyphicon glyphicon glyphicon-th-list" aria-hidden="true"></span>
                                </button>
                                <ul id="btn-opciones" class="dropdown-menu">
                                    <li>
                                        <a href="@Url.Action("Editar", "Home", new {id = item.Id})"><i class="glyphicon glyphicon glyphicon-edit"> </i> Editar </a>
                                        <a href="@Url.Action("Eliminar", "Home", new {id = item.Id})"><i class="glyphicon glyphicon glyphicon-remove"> </i> Eliminar </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    </div>
</div>